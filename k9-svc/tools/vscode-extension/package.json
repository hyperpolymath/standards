{
  "name": "k9-tools",
  "displayName": "K9 Tools",
  "description": "Syntax highlighting and validation for K9 contractiles",
  "version": "1.0.0",
  "publisher": "hyperpolymath",
  "author": {
    "name": "Jonathan D.A. Jewell",
    "email": "jonathan.jewell@open.ac.uk"
  },
  "license": "PMPL-1.0-or-later",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "k9",
    "nickel",
    "infrastructure",
    "contractile"
  ],
  "activationEvents": [
    "onLanguage:k9"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "k9",
        "aliases": [
          "K9",
          "k9"
        ],
        "extensions": [
          ".k9.ncl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "k9",
        "scopeName": "source.k9",
        "path": "./syntaxes/k9.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "k9.validate",
        "title": "K9: Validate Contractile"
      },
      {
        "command": "k9.sign",
        "title": "K9: Sign Contractile"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "K9",
      "properties": {
        "k9.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate K9 contractiles on save"
        },
        "k9.strictValidation": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict validation (fail on warnings)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}
