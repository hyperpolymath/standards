{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-import --env=.env src/bot.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-import --env=.env --watch src/bot.ts",
    "test": "deno test --allow-net --allow-read --allow-write"
  },
  "imports": {
    "@grammy/bot": "https://deno.land/x/grammy@v1.19.2/mod.ts",
    "@db/sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
