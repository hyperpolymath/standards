// Hello Red - First Me Language Program
// A simple racing program using Speedy Red

// In visual form, this would be blocks that snap together
// This text representation shows what the blocks mean

program HelloRed {

  // Create a simple race track
  track MyTrack {
    start -> right -> right -> down -> finish
  }

  // Ask Red to race!
  Red do race on MyTrack

  // Show the result
  show Red.time
  show "Great racing!"

}

