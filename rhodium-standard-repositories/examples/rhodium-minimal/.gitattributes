# Git attributes for rhodium-minimal

# Auto-detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf

# Documentation
*.md text eol=lf
*.adoc text eol=lf
*.txt text eol=lf

# Configuration files
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.ncl text eol=lf

# Shell scripts
*.sh text eol=lf
justfile text eol=lf

# Nix files
*.nix text eol=lf
flake.lock text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.wasm binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary

# Export ignore (don't include in git archive)
.gitignore export-ignore
.gitattributes export-ignore
.gitlab-ci.yml export-ignore
