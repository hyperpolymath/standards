chapter "{{ ProjectName }}"

session "{{ ProjectName }}" = HOL +
  description "
    Formal verification of {{ project-name }} pipeline invariants.

    This session proves structural properties of the data processing pipeline:
    - Partition invariants (disjoint, exhaustive splits)
    - Bijection invariants (one-to-one mappings)
    - Checksum integrity
    - Ratio tolerance bounds
    - Monotonicity properties
    - Idempotency guarantees

    Built using the Rhodium Pipeline Template methodology.
  "
  options [
    document = pdf,
    document_output = "output/document"
  ]
  sessions
    "HOL-Library"
    "HOL-Analysis"
  theories
    {{ ProjectName }}_Prelude
    {{ ProjectName }}_Partition
    {{ ProjectName }}_Bijection
    {{ ProjectName }}_Checksum
    {{ ProjectName }}_Ratio
    {{ ProjectName }}_Monotonicity
    {{ ProjectName }}_Idempotency
    {{ ProjectName }}_Invariants
    {{ ProjectName }}_Composition
  document_files
    "root.tex"
