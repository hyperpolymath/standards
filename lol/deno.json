{
  "nodeModulesDir": "auto",
  "imports": {
    "@rescript/core": "npm:@rescript/core@^1.6.0"
  },
  "tasks": {
    "build": "npx rescript build",
    "build:watch": "npx rescript build -w",
    "clean": "npx rescript clean",
    "test": "deno run -A npm:vitest run",
    "test:watch": "deno run -A npm:vitest --watch",
    "test:coverage": "deno run -A npm:vitest run --coverage",
    "crawl": "deno run -A src/Lang1000.res.mjs crawl",
    "verify": "deno run -A src/Lang1000.res.mjs verify",
    "lint": "deno run -A npm:@biomejs/biome check .",
    "fmt": "deno run -A npm:@biomejs/biome format --write ."
  },
  "compilerOptions": {
    "strict": true
  }
}
