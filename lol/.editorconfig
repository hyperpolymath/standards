# EditorConfig for 1000Langs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.res]
indent_size = 2

[*.{js,mjs,ts}]
indent_size = 2

[*.{json,yaml,yml,toml}]
indent_size = 2

[*.ncl]
indent_size = 2

[*.{adoc,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4

[*.agda]
indent_size = 2

[*.{v,lean}]
indent_size = 2
